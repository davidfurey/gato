{
  "compilerOptions": {
    "typeRoots" : ["./node_modules/@types", "./typings"],
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true, // add module: "module": "es6", to tsconfig.client.json and tsconfig.server.json
    "target": "es5",
    "lib": [
      "es2019",
      "dom"
    ],
    "jsx": "react",
    "moduleResolution": "node",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true
  }
}
